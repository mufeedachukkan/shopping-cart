<section>
    <div class="container">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Item</th>
                    <th scope="col">Title</th>
                    <th scope="col">Quantity</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <td>
                        <img src="/product-images/{{this._id}}.jpg" style="width: 70px;height:70px"
                            alt="">
                    </td>
                    <td>
                        {{this.Name}}
                    </td>
                    <td>
                        <button class="cart-item-count ms-3">-</button>
                        1
                        <button class="cart-item-count me-3">+</button>
                    </td>
                    <td>
                        <a href="" class="btn btn-danger">Remove</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>