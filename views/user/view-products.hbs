<section>
    <div class="container-fluid mt-5">
        <div class="">
            <div class="row ">
                    {{#each products}}
                    <div class="d-flex text-center justify-content-evenly col-md-4 col-sm-6 col-lg-3">
                        <div class="card" style="width: 18rem; height:30rem">
                            <img src="/product-images/{{this._id}}.jpg" class=" card-img-top " alt="...">
                            <div class="card-body">
                                <h5 class="card-title">{{this.Name}}</h5>
                                <p class="card-text">{{this.Description}}</p>
                                <a href="/add-to-cart/{{this._id}}" class="btn btn-primary">Add to cart</a>
                            </div>
                        </div>
                    </div>
                    {{/each}}
            </div>
        </div>
    </div>
</section>